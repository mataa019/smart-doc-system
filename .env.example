# Environment Configuration for Smart Document Management System

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=smart_doc_system
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_REFRESH_EXPIRES_IN=7d

# Application Configuration
PORT=3000
NODE_ENV=development
API_PREFIX=api/v1

# File Storage Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx,txt,jpg,jpeg,png,gif,zip,rar

# Email Configuration (Microsoft Graph API)
OUTLOOK_CLIENT_ID=your-outlook-client-id
OUTLOOK_CLIENT_SECRET=your-outlook-client-secret
OUTLOOK_TENANT_ID=your-tenant-id
OUTLOOK_REDIRECT_URI=http://localhost:3000/api/v1/auth/outlook/callback

# Encryption Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# OCR Configuration
OCR_SERVICE_URL=http://localhost:3001
TESSERACT_PATH=/usr/bin/tesseract

# AI/ML Configuration
AI_SERVICE_URL=http://localhost:3002
AI_API_KEY=your-ai-service-api-key

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:4200

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Security Configuration
SESSION_SECRET=your-session-secret-here
BCRYPT_ROUNDS=12

# Print Service Configuration
PRINT_SERVICE_URL=http://localhost:3003

# Scan Service Configuration
SCAN_SERVICE_URL=http://localhost:3004